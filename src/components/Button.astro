---
export interface Props {
  href: string;
  id?: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
}

const { href, id, ariaLabel, title, disabled = false } = Astro.props;
---

<a
  href={disabled ? "#" : href}
  id={id}
  tabindex={disabled ? "-1" : "0"}
  class="text-md group relative inline-flex items-center justify-center rounded-md bg-gray-800 px-6 py-3 font-medium tracking-tighter text-white"
  aria-label={ariaLabel}
  title={title}
  aria-disabled={disabled}
>
  <span
    class="absolute inset-0 ml-1 mt-1 h-full w-full rounded-md bg-purple-600 transition-all duration-300 ease-in-out group-hover:ml-0 group-hover:mt-0"
  ></span>
  <span class="absolute inset-0 h-full w-full rounded-md bg-white"></span>
  <span
    class="absolute inset-0 h-full w-full rounded-md bg-purple-600 opacity-0 transition-all delay-100 duration-200 ease-in-out group-hover:opacity-100"
  ></span>
  <span
    class="relative text-purple-600 transition-colors delay-100 duration-200 ease-in-out group-hover:text-white"
    ><slot /></span
  >
</a>
